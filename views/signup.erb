<% content_for :head do %>
  <title>Sign Up</title>
<% end %>


<% content_for :bodySignup do %>
  <body id="bodySignup">
<% end %>


<div id="login-main">
<img src="img/dogcrimes-med.png">


<div id="main">
<h1>Sign Up:</h1>
<form class="form" method="POST" action="/">

		
			
			<label for="name">First Name</label><br>
				<input type="text" name="fname" id="formField" placeholder="First Name" /><br>
			

			<label for="name">Last Name</label><br>
				<input type="text" name="lname" id="formField" placeholder="Last Name" /><br>
				
		
			<label for="email">Email</label><br>
				<input type="text" name="email" id="formField" placeholder="your@email.com" /><br>
				

			<label for="username">User Name</label><br>
				<input type="text" name="username" id="formField" placeholder="username" /><br>

			<label for="password">Password</label><br>
				<input type="password" name="password" id="formField" />	<br>
				
			<input class="btn" type="submit" value="Submit" />
			<br><br>
			<div>Already a member? <a href="/signin">Sign In</a></div>
			


</form>
<br>

</div>
</div>